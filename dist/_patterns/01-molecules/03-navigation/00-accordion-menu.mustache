{{# accordionList }}
<ul class="vertical menu" data-accordion-menu>
  {{# item1 }}
  <li>
    <a href="#">{{ accordionText }}</a>
    <ul class="menu vertical nested is-active">
	  {{# item1Nested }}
      <li>
        <a href="#">{{ item1Text }}</a>
        <ul class="menu vertical nested">
	      {{# item1NestedSublist }}
          <li><a href="#">{{ text }}</a></li>
          {{/ item1NestedSublist }}
        </ul>
      </li>
      {{/ item1Nested}}
    </ul>
  </li>
  {{/ item1 }}
  {{# item2 }}
  <li>
    <a href="#">{{ accordionText }}</a>
    <ul class="menu vertical nested">
	  {{# item2Nested }}
      <li><a href="#">{{ text }}</a></li>
      {{/ item2Nested }}
    </ul>
  </li>
  {{/ item2 }}
  {{# item3 }}
  <li><a href="#">{{ text }}</a></li>
  {{/ item3 }}
</ul>
{{/ accordionList }}

