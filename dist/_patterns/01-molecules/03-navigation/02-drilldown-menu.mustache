<ul class="vertical menu" data-drilldown style="width: 200px" id="m1">
  {{# drilldownMenu }}
  <li>
    <a href="{{ url }}">{{ text }}</a>
    {{# drilldownSubmenu }}
    <ul class="vertical menu" id="m2">
	  {{# drilldownSubmenuList }}
      <li>
        <a href="{{ url }}">{{ text }}</a>
        {{# drilldownSubSubmenu}}
        <ul class="vertical menu" id="m3">
	      {{# drilldownSubSubmenuList }}
          <li><a href="{{ url }}">{{ text }}</a></li>
          {{/ drilldownSubSubmenuList }}
        </ul>
        {{/ drilldownSubSubmenu}}
      </li>
      {{/ drilldownSubmenuList }}
    </ul>
    {{/ drilldownSubmenu}}
  </li>
  {{/ drilldownMenu}}
</ul>
